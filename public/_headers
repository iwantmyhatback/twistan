# Security Headers for Cloudflare Pages
# These headers are automatically applied to all responses

/*
  # Prevent clickjacking attacks
  X-Frame-Options: DENY

  # Prevent MIME type sniffing
  X-Content-Type-Options: nosniff

  # Control referrer information
  Referrer-Policy: strict-origin-when-cross-origin

  # Restrict browser features and APIs
  # geolocation=(self) allows browser geolocation API for AboutYou page
  Permissions-Policy: accelerometer=(), camera=(), geolocation=(self), gyroscope=(), magnetometer=(), microphone=(), payment=(), usb=()

  # Legacy XSS protection (for older browsers)
  X-XSS-Protection: 1; mode=block

  # Content Security Policy (OPTIONAL - commented out by default)
  # Uncomment and customize after thorough testing
  # Content-Security-Policy: default-src 'self'; script-src 'self' https://challenges.cloudflare.com 'unsafe-inline'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src https://fonts.gstatic.com; img-src 'self' https: data:; connect-src 'self' https://ipapi.co https://api.ipify.org; frame-ancestors 'none'; base-uri 'self'; form-action 'self'

# API endpoints - additional headers
/api/*
  # Cache control for API responses
  Cache-Control: no-store, no-cache, must-revalidate

  # Additional security for API
  X-Content-Type-Options: nosniff
